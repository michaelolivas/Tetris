<Window x:Class="game.Start"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:game"
        mc:Ignorable="d"
        Title="Start" Height="450" Width="400">
    <Grid x:Name="startmenu">
        <Grid.Background>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                <GradientStop Color="Black" Offset="0.196"/>
                <GradientStop Color="#FF8C0000" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>
        <TextBlock HorizontalAlignment="Left" Height="82" Margin="64,28,0,0" TextWrapping="Wrap" Text="TETRIS" VerticalAlignment="Top" Width="270" FontSize="72" FontFamily="Courier New" FontWeight="Bold" Foreground="#FFA90000"/>
        <Button x:Name="start" Content="START" HorizontalAlignment="Left" Height="39" Margin="155,180,0,0" VerticalAlignment="Top" Width="90" Background="{x:Null}" BorderBrush="{x:Null}" Foreground="White" FontFamily="Segoe Script" FontSize="24" Click="start_Click"/>

    </Grid>
</Window>
