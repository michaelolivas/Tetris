<Page
    x:Class="TetrisUWP.highScores"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:TetrisUWP"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
    Height="450" Width="400">
    <Grid x:Name="highScores1" Background="#FFFF00EE">
        <TextBlock HorizontalAlignment="Left" Height="108" Margin="0,-12,0,0" TextWrapping="Wrap" Text="HIGH" VerticalAlignment="Top" Width="203" FontFamily="Segoe Print" FontSize="72" FontWeight="Bold" RenderTransformOrigin="0.5,0.5"/>
        <TextBlock HorizontalAlignment="Left" Height="70" Margin="152,68,0,0" TextWrapping="Wrap" Text="SCORES" VerticalAlignment="Top" Width="203" FontSize="48" FontFamily="Segoe Print" FontWeight="Bold" RenderTransformOrigin="0.5,0.5"/>
        <Button x:Name="back" Content="BACK" HorizontalAlignment="Left" Height="52" Margin="309,0,0,0" VerticalAlignment="Top" Width="76" FontFamily="Segoe Print" FontSize="18" Background="{x:Null}" BorderBrush="{x:Null}" Foreground="White" Click="back_Click"/>
    </Grid>
</Page>
